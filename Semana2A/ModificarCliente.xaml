<Window x:Class="Semana2A.ModificarCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana2A"
        mc:Ignorable="d"
        Title="ModificarCliente" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="ID Cliente:"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtIDCliente"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Nombre Compañia:"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtNombreCompania"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Nombre Contacto:"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtNombreContacto"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Cargo Contacto:"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtCargoContacto"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Dirección:"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtDireccion"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Nuevo Teléfono:"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtTelefono"/>

        <Button Grid.Row="5" Content="Guardar" Click="Modificar_Click" Grid.ColumnSpan="2" Margin="0,35,0,-35"/>
    </Grid>
</Window>
