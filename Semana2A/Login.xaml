<Window x:Class="Semana2A.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana2A"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Usuario" FontSize="18" Margin="5"/>
            <TextBox x:Name="txtUsername" Margin="0 0 0 5"/>
            <TextBlock Text="Contraseña" FontSize="18" Margin="5"/>
            <TextBox x:Name="txtPassword" Margin="0 0 0 5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Click="Login_Click" Margin="5" Width="100" Height="20">Login</Button>
                <Button Click="Salir_Click" Margin="5" Width="100" Height="20">Salir</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
